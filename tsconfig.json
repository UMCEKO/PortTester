{
  "compilerOptions": {
    //Strict mode
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,

    //Other
    "module": "CommonJS",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}